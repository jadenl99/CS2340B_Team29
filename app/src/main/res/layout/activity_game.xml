<?xml version="1.0" encoding="utf-8"?>
<!-- whole screen container -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    tools:context=".GameActivity">
    <FrameLayout
        android:id="@+id/gameViewContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

    <!--
    <com.example.cs2340b_team29.L3View
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    -->

    <!-- top screen bar (also a container for name, sprite, elements) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:weightSum="4"
        android:orientation="horizontal"
        android:background="@color/cryptic_green">

        <!-- sprite element -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">;
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/avatarImage"
                    android:layout_width="115dp"
                    android:layout_height="75dp"
                    android:outlineSpotShadowColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.175"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.13" />
            </LinearLayout>
        </RelativeLayout>

        <!-- name element -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">;
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/nameLabel"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="16dp"
                    android:textSize="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.12" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <!-- bottom screen bar (also a container for HP element) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:weightSum="4"
        android:orientation="horizontal"
        android:background="@color/cryptic_green">

        <!-- hp text element -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">;
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="HP:"
                    android:textAllCaps="true"
                    android:textSize="40sp"
                    tools:ignore="DuplicateIds" />
            </LinearLayout>
        </RelativeLayout>

        <!-- hp status element-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">;
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/hpLevelLabel"
                    android:layout_width="215dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="8dp"
                    android:textSize="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.194" />
            </LinearLayout>
        </RelativeLayout>

        <!-- difficulty element-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">;
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/difficultyLabel"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="40dp"
                    android:textSize="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.048" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/level1"
        android:layout_width="115dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_center="true"
        android:layout_marginEnd="0dp"
        android:background="@color/mystical_purple"
        android:backgroundTint="@color/mystical_purple"
        android:shadowColor="@color/black"
        android:shadowRadius="5"
        android:text="Next"
        android:textSize="30sp"
        app:iconTint="#FFFFFF" />

    <Button
        android:id="@+id/level2"
        android:layout_width="115dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_center="true"
        android:layout_marginEnd="0dp"
        android:background="@color/mystical_purple"
        android:backgroundTint="@color/mystical_purple"
        android:shadowColor="@color/black"
        android:shadowRadius="5"
        android:text="Next"
        android:textSize="30sp"
        app:iconTint="#FFFFFF" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="115dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_center="true"
        android:layout_marginEnd="0dp"
        android:background="@color/mystical_purple"
        android:backgroundTint="@color/mystical_purple"
        android:shadowColor="@color/black"
        android:shadowRadius="5"
        android:text="Next"
        android:textSize="30sp"
        app:iconTint="#FFFFFF" />

    <Button
        android:id="@+id/exit"
        android:layout_width="115dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_center="true"
        android:layout_marginEnd="0dp"
        android:background="@color/mystical_purple"
        android:backgroundTint="@color/mystical_purple"
        android:shadowColor="@color/black"
        android:shadowRadius="5"
        android:text="Exit"
        android:textSize="30sp"
        app:iconTint="#FFFFFF" />

</RelativeLayout>